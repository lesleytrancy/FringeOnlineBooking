{
  "compilerOptions": {
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "target": "es2016",
  "module": "commonjs",
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true,
  "baseUrl": "./src",
  "paths": {
    "config/*": ["config/*"],
    "entities/*": ["entities/*"],
    "utils/*": ["utils/*"]
  }
  },
  "include": ["src/**/*"]
}
